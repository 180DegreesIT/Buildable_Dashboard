# Database
DATABASE_URL="postgresql://postgres@localhost:5432/buildable_dashboard?schema=public"

# Server
PORT=6001
NODE_ENV=development
JWT_SECRET=dev-secret-change-in-production

# 3CX API
THREECX_CLIENT_ID=your_3cx_client_id
THREECX_CLIENT_SECRET=your_3cx_client_secret

# Dev auth bypass user
DEV_USER_EMAIL=admin@buildable.com.au
DEV_USER_NAME=Dev Admin

# Xero Integration
# Get credentials from: Xero Developer Portal -> My Apps -> App credentials
XERO_CLIENT_ID=your_xero_client_id
XERO_CLIENT_SECRET=your_xero_client_secret
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
XERO_ENCRYPTION_KEY=generate_with_node_crypto_random_bytes_32_hex
# Set to 'true' for development without live Xero connection (defaults to true if not set)
XERO_MOCK_MODE=true
